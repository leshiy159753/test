# Botcoin API Configuration
BOTCOIN_API_URL=https://botfarmer.ai

# Ed25519 Keys (generate with: npm run generate-keys)
BOTCOIN_PRIVATE_KEY=your_private_key_base64_here
BOTCOIN_PUBLIC_KEY=your_public_key_base64_here

# Optional: Base wallet address for on-chain claims
BASE_WALLET_ADDRESS=

# Agent Configuration
MINING_INTERVAL=60000  # Milliseconds between mining cycles (default: 60000 = 1 minute)
MAX_RETRIES=3          # Maximum attempts per hunt

# Logging
LOG_LEVEL=info         # debug, info, warn, error

# Optional: AI Research (if implementing LLM-based puzzle solving)
OPENAI_API_KEY=

# Feature Flags
AUTO_REGISTER=false           # Auto-register on first run
AUTO_CLAIM_ONCHAIN=false      # Auto-claim tokens when balance > threshold
